<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/resetpassword_illustrator"
        android:layout_margin="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/restEmailId"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:drawableLeft="@drawable/email"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:text="Email :"
            android:textColor="@color/owncolor"
            android:textAlignment="textStart"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppinsmedium"
            android:drawablePadding="10dp"/>
        <EditText
            android:id="@+id/resetPassId"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:drawableLeft="@drawable/password"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:text="Password :"
            android:textColor="@color/owncolor"
            android:textAlignment="textStart"
            android:inputType="numberPassword"
            android:fontFamily="@font/poppinsmedium"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/resetconfirmPassid"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:drawableLeft="@drawable/confirm"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:text="Confrim Password :"
            android:textColor="@color/owncolor"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppinsmedium"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"/>
        <Button
            android:id="@+id/restpassBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="reset"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsbold"
            android:background="@drawable/button_bg"/>


    </LinearLayout>

</LinearLayout>